<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-lg navbar-dark bg-primary">
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.ActionLink("Index", "Order")">Заказы</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.ActionLink("Index", "Product")">Продукты</a>
                            </li>
                        }                       
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <a class="nav-link">Выход</a>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.ActionLink("Login", "Account")">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.ActionLink("Register", "Account")">Регистрация</a>
                        </li>
                    }                  
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">        
        @RenderBody()
    </div>

    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.11.0/umd/react-dom.development.js"></script>
    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/16.11.0/umd/react.development.js"></script>
    <script>

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
