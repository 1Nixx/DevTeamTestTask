@model Web.ViewModels.Product.ProductViewModel

<div class="col-md-6 offset-md-3">
	<form method="post" asp-controller="Product" asp-action="UpdateProduct">
		<h4 class="mb-5 text-secondary">Редактирование товара</h4>
		<div class="row">
			<div class="mb-3 col-md-6">
				<label asp-for="Id">Id</label>
				<input type="number" name="Id" asp-for="Id" class="form-control" value="@Model.Id" readonly/>
			</div>
			<div class="mb-3 col-md-6">
				<label asp-for="Name">Название</label>
				<input type="text" name="Name" asp-for="Name" class="form-control" value="@Model.Name">
			</div>
			<div class="mb-3 col-md-6">
				<label asp-for="Price">Цена</label>
				<input type="text" name="Price" asp-for="Price" class="form-control" value="@Model.Price">
			</div>
			<div class="mb-3 col-md-6">
				<label asp-for="Color">Цвет</label>
				<input type="color" name="Color" asp-for="Color" class="form-control" value="@Model.Color">
			</div>
			<hr/>
			<div class="mb-3 col-md-6">
				<label asp-for="Shop">Магазин</label>
				<select asp-for="Shop" name="ShopId" class="form-control" id="shop-select"></select>
			</div>
			<div class="validation" asp-validation-summary="All"></div>
			<div class="col-md-6">
				<button class="btn btn-primary btn-register-form float-end">Изменить</button>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script src="~/js/loadShopsSelect.js"></script>
	<script>
		LoadShops(@Model.Shop.Id);
	</script>
}